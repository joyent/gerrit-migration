+int
+vmmdev_cleanup(void)
+{
+	int	error;
+
+	if (SLIST_EMPTY(&head))
+		error = 0;
+	else
+		error = EBUSY;
+
+	if (error == 0)
+		vmm_trace_dmsg_free();
+
+	return (error);
+}
