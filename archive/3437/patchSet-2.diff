+
+	offset = lseek(d, offset, SEEK_SET);
+	if (offset == -1)
+		return (-1);
+
+	n = writev(d, iov, iovcnt);
+	if (n == -1)
+		return (-1);
+
+	offset = lseek(d, old_offset, SEEK_SET);
+	if (offset == -1)
+		return (-1);
+
+	return (n);
