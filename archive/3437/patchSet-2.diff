+#else
+	len = strlen("/devices/pseudo/vmm@0:") + strlen(name) + 1;
+#endif
+	vmfile = malloc(len);
+	assert(vmfile != NULL);
+#ifdef	__FreeBSD__
+	snprintf(vmfile, len, "/dev/vmm/%s", name);
+#else
+	snprintf(vmfile, len, "/devices/pseudo/vmm@0:%s", name);
