+static __inline void
+uuid_enc_le(void *buf, uuid_t *uuidp)
+{
+	uchar_t	*p;
+	int	i;
+
+	p = buf;
+	be32enc(p, ((struct uuid *)uuidp)->time_low);
+	be16enc(p + 4, ((struct uuid *)uuidp)->time_mid);
