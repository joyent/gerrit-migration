+static void
+vmm_glue_callout_handler(void *arg)
+{
+	struct callout *c = arg;
+
+	c->c_flags &= ~CALLOUT_PENDING;
+	if (c->c_flags & CALLOUT_ACTIVE) {
+		(c->c_func)(c->c_arg);
+	}
+}
