+		vm_free_mem_seg(vm, &vm->mem_segs[i]);
+
+	vm->num_mem_segs = 0;
+
+	for (i = 0; i < VM_MAXCPU; i++)
+		vcpu_cleanup(vm, i);
+
+	vatpit_cleanup(vm->vatpit);
+	vhpet_cleanup(vm->vhpet);
+	vatpic_cleanup(vm->vatpic);
+	vioapic_cleanup(vm->vioapic);
+
+#ifdef	__FreeBSD__
+	iommu_destroy_domain(vm->iommu);
+#endif
+
+	VMCLEANUP(vm->cookie);
+
+	free(vm, M_VM);
