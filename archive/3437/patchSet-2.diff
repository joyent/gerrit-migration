+static void *
+uart_tty_thread(void *param)
+{
+	struct uart_softc *sc = param;
+	pollfd_t pollset;
+
+	pollset.fd = STDIN_FILENO;
+	pollset.events = POLLIN | POLLPRI | POLLRDNORM | POLLRDBAND;
+
+	for (;;) {
+		if (poll(&pollset, 1, -1) < 0) {
+			if (errno != EINTR) {
+				perror("poll failed");
+				break;
+			}
+			continue;
+		}
+		uart_tty_drain(sc);
+	}
+
+	return (NULL);
+}
