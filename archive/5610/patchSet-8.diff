+sv_consume_if(strview_t *sv, const char *str)
+{
+	size_t slen = strlen(str);
+
+	if (sv->sv_rem < slen)
+		return (B_FALSE);
+	if (strncmp(sv->sv_first, str, slen) != 0)
+		return (B_FALSE);
+
+	sv->sv_first += slen;
+	sv->sv_rem -= slen;
+	return (B_TRUE);
