+int
+vfs_makefsops(const fs_operation_def_t *template, vfsops_t **actual)
+{
+	int error;
+	int unused_ops;
+
+	*actual = (vfsops_t *)kmem_alloc(sizeof (vfsops_t), KM_SLEEP);
+
+	error = fs_copyfsops(template, *actual, &unused_ops);
+	if (error != 0) {
+		kmem_free(*actual, sizeof (vfsops_t));
+		*actual = NULL;
+		return (error);
+	}
+
+	return (0);
+}
