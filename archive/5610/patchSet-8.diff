+
+fail() {
+	echo $1
+	exit -1
+}
+
+create_test_hier() {
+	mkdir -p $1/src $1/dst
+	touch $1/target
+	touch $1/file
+	touch $1/dst/file1
+	touch $1/src/file2
+	ln -s ../target $1/src/tlink
+	ln -s ../dst $1/src/dstlink
+	ln -s target $1/tlink
+}
+
