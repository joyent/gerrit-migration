+    T("_ZN9$u20$test4foobE", " test::foob"),
+    T("_ZN35Bar$LT$$u5b$u32$u3b$$u20$4$u5d$$GT$E", "Bar<[u32; 4]>"));
+
+GROUP(demangle_many_dollars,
