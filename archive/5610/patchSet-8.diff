+	ASSERT(dbp->db_ref > 0);
+	ASSERT(mp->b_next == NULL && mp->b_prev == NULL);
+	FTRACE_1("freeb(): mp=0x%lx", (uintptr_t)mp);
+
+	STR_FTEVENT_MBLK(mp, caller(), FTEV_FREEB, dbp->db_ref);
