+	}
+	return (0);
+}
+
+int
+t_kconnect(TIUSER *tiptr, struct t_call *sndcall, struct t_call *rcvcall)
+{
+	file_t		*fp = tiptr->fp;
+	vnode_t		*vp = fp->f_vnode;
+	int		rc;
+
+	if (t_connect(vp->v_fd, sndcall, rcvcall) < 0) {
+		rc = t_errno;
+		cmn_err(CE_NOTE, "t_kconnect: t_connect terr=%d", rc);
+		if (rc == TLOOK) {
+			/* Probably got a RST. */
+			rc = ECONNREFUSED;
+		} else {
+			rc = tlitosyserr(rc);
+		}
+		return (rc);
+	}
+	return (0);
+}
