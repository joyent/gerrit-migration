+typedef struct rust_test_case {
+	const char *mangled;
+	const char *demangled;
+} rust_test_case_t;
+#define	T(_m, _d) { .mangled = _m, .demangled = _d }
+#define	T_ERR(_m) { .mangled = _m }
+
+typedef struct rust_test_grp {
+	const char		*name;
+	rust_test_case_t	tests[];
+} rust_test_grp_t;
+#define	GROUP(_n, ...)			\
+	static rust_test_grp_t _n = {	\
+		.name = #_n,		\
+		.tests = {		\
+			__VA_ARGS__,	\
+			{ NULL, NULL }	\
+		}			\
