+		.rds_str = s,
+		.rds_ops = ops,
+	};
+	custr_alloc_ops_t custr_ops = {
+		.custr_ao_alloc = rustdem_alloc,
+		.custr_ao_free = rustdem_free
+	};
+	custr_alloc_t custr_alloc = {
+		.cua_version = CUSTR_VERSION
+	};
