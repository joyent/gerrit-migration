+		warnx("slot %s has no card inserted or activated", name);
+		return;
+	}
+
+	(void) printf("ATR for %s (%u bytes)\n", name, ucs.ucs_atrlen);
+	if (caa->caa_props) {
+		ccidadm_atr_props(&ucs);
+	}
+
+	if (caa->caa_hex) {
+		ccidadm_atr_hexdump(ucs.ucs_atr, ucs.ucs_atrlen);
