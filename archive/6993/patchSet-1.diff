+static void
+ccid_init_tpdu_t1(ccid_t *ccid, ccid_slot_t *slot)
+{
+	t1_state_icc_init(&slot->cs_io.ci_t1, slot->cs_icc.icc_atr_data,
+	    ccid->ccid_bufsize);
+}
