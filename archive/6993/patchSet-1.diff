+#define	T1_TYPE_RBLOCK	0x80
+#define	T1_TYPE_SBLOCK	0xc0
+#define	T1_TYPE_IMASK	0x80
+#define	T1_TYPE_RSMASK	0xc0
+
+#define	T1_IBLOCK_NS	0x40
+#define	T1_IBLOCK_M	0x20
+#define	T1_IBLOCK_RSVD	0x1f
+
