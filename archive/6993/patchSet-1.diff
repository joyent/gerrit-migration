+	ssize_t ret;
+	char buf[500];
+
+	if (argc != 2) {
+		errx(EXIT_FAILURE, "missing required ccid path");
+	}
+
+	if ((fd = open(argv[1], O_RDWR)) < 0) {
+		err(EXIT_FAILURE, "failed to open %s", argv[1]);
+	}
