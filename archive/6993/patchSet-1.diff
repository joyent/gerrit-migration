+static void
+ccid_command_state_transition(ccid_command_t *cc, ccid_command_state_t state)
+{
+	VERIFY(MUTEX_HELD(&cc->cc_ccid->ccid_mutex));
+
+	cc->cc_state = state;
+	cv_broadcast(&cc->cc_cv);
+}
