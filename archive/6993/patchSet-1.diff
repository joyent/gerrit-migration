+static void
+ccidadm_atr_fetch(int fd, const char *name, void *arg)
+{
+	uccid_cmd_status_t ucs;
+	ccidadm_atr_args_t *caa = arg;
+
+	bzero(&ucs, sizeof (ucs));
+	ucs.ucs_version = UCCID_CURRENT_VERSION;
