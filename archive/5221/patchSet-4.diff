+
+AGENT_USER = $(shell id -un)
+AGENT_PREBUILT_BRANCH ?= $(BRANCH)
+AGENT_PREBUILT_TRY_BRANCH ?= $(TRY_BRANCH)
+AGENT_PREBUILT_DIR ?= /var/tmp/agent-cache.$(AGENT_USER)
